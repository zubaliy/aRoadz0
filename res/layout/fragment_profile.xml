<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="top" >

    <EditText
        android:id="@+id/txtb_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:hint="@string/txt_name"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtb_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtb_name"
        android:layout_below="@+id/txtb_name"
        android:layout_marginTop="36dp"
        android:hint="@string/txt_email"
        android:inputType="textEmailAddress"
        android:minWidth="200dip" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtb_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtb_name"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtb_email"
        android:layout_marginTop="26dp"
        android:hint="@string/txt_password"
        android:inputType="text" 
        android:minWidth="200dip" >

        <requestFocus />
    </EditText>
    
    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        android:minHeight="60dip"
        android:minWidth="100dip"
        android:text="Save" />

    <TextView
        android:id="@+id/txt_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtb_password"
        android:text="User" />

</RelativeLayout>